[t:template,n:ut2W_ice_archer]
{
	category_name = "2W_evil_d";
	doc = "2W_ice_archer";
	specializes = actor_evil;
	[actor]
	{
		[skills]
		{
			strength =  35.1, 0;
			intelligence =  7.1, 0;
			dexterity =  32, 0;
            ranged =  58,  0;
		}
	}
	[aspect]
	{
		experience_value = 42282;
		life = 1085.4;
        max_life = 1085.4;
        mana = 44.7;
		max_mana = 44.7;
		model = m_c_edm_ia_pos_1;
		material = ice;
		[voice]
		{
			[die]			{ priority = high; * = s_e_die_ice_archer; }
			[enemy_spotted]	{ priority = high; * = s_e_call_ice_creature_SED; }
		}
	}
	[attack]
	{
		attack_range = 0.5;
		damage_max = 395.4;
		damage_min = 292.6;
		damage_bonus_min_ranged = 100;
		damage_bonus_max_ranged = 145;
	}
	[body]
	{
		avg_move_velocity = 3.3;
		[bone_translator]
		{
			body_anterior = bip01_head;
			body_mid = bip01_spine2;
			body_posterior = bip01_pelvis;
			kill_bone = bip01_spine2;
			shield_bone = shield_grip;
			weapon_bone = weapon_grip;
		}
		[weapon_scales]
		{
			as_bow_and_arrow = 1.3, 1.3, 1.3;
		}
		[chore_dictionary]
		{
			chore_prefix = a_c_edm_ia_fs;
			[chore_attack]
			{
				chore_stances = 1,6;
				skrit = select_attack;
				[anim_files] { 00=at; }
			}
			[chore_default]
			{
				chore_stances = 1,6;
				skrit = infinite_loop;
				[anim_files] { 00=ds; }
			}
			[chore_die]
			{
				chore_stances = 1,6;
				skrit = select_transition;
				[anim_files] { 00=di; }
			}
			[chore_fidget]
			{
				chore_stances = 1,6;
				skrit = select_fidget;
				[anim_files] { 00=dff; }
			}
			[chore_walk]
			{
				chore_stances = 1,6;
				skrit = select_walk;
				[anim_files] { 00=rl; }
			}
		}
	}
	[common]
	{
		screen_name="Ice Marksman";
		membership = monster, party_ice_archer;
		[template_triggers]
		{
			[*]
			{
				action* = call_sfx_script("ice_warrior");
				condition* = receive_world_message("WE_ENTERED_WORLD");
				single_shot = true;
			}
		}
	}
    [defend] { defense=469; }
	[inventory]
	{
		selected_active_location = IL_ACTIVE_RANGED_WEAPON;
    	[pcontent]
		{
			[all*]
			{
                  es_shield_hand = bw_un_ice_c_m_s_r_avg;
			}

			[oneof*]
			{
				[oneof*]
				{
				   chance = 0.05;
				   il_main = potion_health_large;
				   il_main = potion_mana_large;
				}
				[all*]
				{
       				chance = 0.02;
	                il_main = #spell/45-63;
				}
				[oneof*]
				{
					chance = 0.2;
					il_main = #*/26-47;
					il_main = #armor/80-406;
	                il_main = #weapon/155-185;
				}
                [oneof*]
				{
	            	chance = 0.004;
	                il_main = #weapon/-rare(1)/177-220;
	                il_main = #armor/-rare(1)/491-639;
                    il_main = #*/-rare(1)/177-220;
                }
				[oneof*]
				{
                	chance = 0.002;
	                il_main = #weapon/-unique(2)/177-220;
	                il_main = #armor/-unique(2)/491-639;
                    il_main = #*/-unique(2)/177-220;
	            }
				[gold*]
				{
					chance = 0.15;
					max = 75602;
					min = 50528;
				}
			}
		}
	}

	[mind]
	{
		jat_brain							= world\ai\jobs\common\brain_hero.skrit
			?actor_creates_own_party		= true
			&stop_flee_alive_party_size		= 1
			&actor_joins_existing_party		= true
			&party_template					= "party_ice_archer";

		jat_fidget = world\ai\jobs\common\job_fidget.skrit;

		melee_engage_range = 14;
		personal_space_range = 0.7;
		ranged_engage_range = 14.0;
		sight_range = 14.0;

		on_enemy_entered_ocz_flee 	= true;
		on_enemy_entered_ocz_attack = false;
		on_enemy_entered_icz_flee 	= true;
		on_enemy_entered_icz_attack = false;
		flee_count 					= 1;
	}
	[physics]
	{
		explode_when_killed = true;
		explosion_magnitude = 1.25;
		gib_gore_good = true;
		[break_particulate]
		{
			frag_glb_ice_01 = 2;
			frag_glb_ice_02 = 2;
			frag_glb_ice_03 = 3;
			frag_glb_ice_04 = 2;
			frag_glb_ice_05 = 1;
			frag_glb_ice_06 = 2;
			frag_glb_ice_07 = 2;
			frag_glb_ice_08 = 2;
		}
	}
}

